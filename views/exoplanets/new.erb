<a class="main" href="/">Main site</a>

<form method="post" action="/exoplanets">
<br>
  <label for="name">Planet's name:</label>
  <input type="text" id="name" name="name"/>

  <br>
  <br>

  <label for="type">Type:</label>
  <select id="type" name="type">
    <option value="Hot Jupiter">Hot Jupiter</option>
    <option value="Mini Neptune">Mini Neptune</option>
    <option value="Rocky">Rocky</option>
    <option value="Super Earth">Super earth</option>
  </select>

  <br>
  <br>

    <label for="habitable">Potentially habitable:</label>
    <select id="habitable" name="habitable">
      <option value="true">Yes</option>
      <option value="false">No</option>
    </select>

    <br>
    <br>

    <label for="mass">Mass</label>
    <input type="number" step=0.01 min=0 name="mass">

    <br>
    <br>
    
    <label for="discovery">Discovery date</label>
    <input type="date" id="discovery" name="discovery">

  <input class="submit" type="submit" value="Add an exoplanet"/>

</form>